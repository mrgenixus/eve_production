%table
  %tr
    %th qty
    %th Name
    %th Item Cost
    %th Item Value
    %th Aggregate Cost
    %th Aggregate Projected Value
    %th

  - produceable.produceable_components.each do |produceable_component|
    - if produceable_component.component
      %tr
        %td= link_to produceable_component.qty, edit_produceable_component_path(produceable_component.id)
        %td= link_to produceable_component.component.name, edit_produceable_path(produceable_component.component)
        %td
          - if produceable_component.component.cost == 0
            N/A
          - else
            = link_to produceable_component.component do
              = number_to_currency produceable_component.component.cost
        %td
          = link_to edit_produceable_path(produceable_component.component) do
            = number_to_currency produceable_component.component.value
        %td= number_to_currency produceable_component.cost, precision: 2
        %td= number_to_currency produceable_component.value, precision: 2
        %td= link_to 'Delete', produceable_component_path(produceable_component.id), method: :delete
  %tr
    %td{colspan: 4}
    %td= number_to_currency produceable.cost
